{% extends 'base.html.twig' %}

{% block body %}
    <h2>Ajout/Modification des articles</h2>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}

    {% if original_image is not null %}
        <p>
            Actuellement :
            <img src="{{ asset('images/' ~ original_image) }}" height="200px" alt="">
        </p>
    {% endif %}

    <div class="text-right">
        <button type="submit" class="btn btn-success">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_article_index') }}" class="btn btn-outline-danger">Retour</a>
    </div>
    {{ form_end(form) }}
{% endblock %}